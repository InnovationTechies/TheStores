        <div class="col-lg-12">
            <div class="row">
                @foreach (var item in Model)
                {
                <div class="col-lg-4 col-md-6 mb-4" style="padding:1% 1% 1% 1%">
                    <div class="card h-100 list-group-item" style="padding: 5% 5% 5% 5%; border-radius:0%">
                        <a href="#">
                            <img class="card-img-top" src="@Url.Content(item.productImage)" alt="Product Image" height="60%" width="60%" />
                        </a>
                        <div class="card-body">
                            <h3 class="card-title">
                                <a href="#">@Html.DisplayFor(modelItem => item.productName)</a>

                            </h3>
                            <h4>
                                R @Html.DisplayFor(modelItem => item.productPrice)
                            </h4>
                            <p class="card-text">
                                <b> @Html.DisplayFor(modelItem => item.productDescription) </b>
                                <br />
                                <b>
                                    @Html.DisplayFor(modelItem => item.productDropPercent) % Off <b>
                                    <br />
                                    @Html.DisplayFor(modelItem => item.productDateEndPromo)
                                    <br />
                                    @*@Html.DisplayFor(modelItem => item.ProductCategory)*@
                        </p>
                        </div>

                    </div>
                    <div class="card-footer">
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.productID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.productID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.productID })*@

                    </div>
                </div>


                
               

