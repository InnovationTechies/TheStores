@model IEnumerable<WOOLWORTH.Models.WoolworthProducts>

@{
    ViewBag.Title = "Index";
}



<!-- Page Content -->
<div class="container">
    <p style="text-decoration-color:black">
        @Html.ActionLink("MANAGER", "Create")
    </p>
    <div class="row">
        <div class="col-lg-3">

            <h1 color="white" ; 0.class="my-4"><b>Find</b></h1>

            <div class="list-group">
                <a href="#" class="list-group-item">Woman</a>
                <a href="#" class="list-group-item">Men</a>
                <a href="#" class="list-group-item">Kids</a>
                <a href="#" class="list-group-item">Babies</a>
            </div>
        </div>
    </div>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <a href='#'><img src="~/img/1st.jfif"></a>

            </div>

            <div class="item">

                <img src="~/img/2nd men.jfif" />
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="row">
        <div class="col-lg-9">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100">
                            <img class="card-img-top" src=@Url.Content(item.productImage) alt="Product Image" height="60%" width="60%" />
                            <div class="card-body">
                                <h4 class="card-title">
                                    <a href="#">@Html.DisplayFor(modelItem => item.productName)<</a>>
                                </h4>
                                <h5>R 330.00</h5>
                                <p class="card-text">
                                    @Html.DisplayFor(modelItem => item.productDesc)
                                    <br />
                                    @Html.DisplayFor(modelItem => item.productDateEndPromo)
                                    <br />
                                    @Html.DisplayFor(modelItem => item.productCatagories)
                                </p>
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                            </div>
                        </div>
                    </div>


                }
            </div>
        </div>
    </div>
</div>
