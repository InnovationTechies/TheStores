@model IEnumerable<WOOLWORTH.Models.WoolworthProducts>

@{
    ViewBag.Title = "Index";
}

<br />

<!-- Page Content -->
<div class="container">
    <br />
    <div class="row">
        <div class="col-lg-3">
            <br />

            <table class="table table-striped " >
                <tr>
                    <th>
                        <a href="#" class="table-striped"Style="color: black">Men</a>
                    </th>
                    <th>
                        <a href="#" class="table-striped"Style="color: black">Women</a>
                    </th>
                    <th>
                        <a href="#" class="table-striped"Style="color: black">Kids</a>
                    </th>
                <tr />
            </table>
        </div>
    </div>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <a href='#'><img src="~/img/1st.jfif"></a>

            </div>

            <div class="item">

                <img src="~/img/2nd men.jfif" />
            </div>
        </div>
        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                @foreach (var item in Model)
    {
            <div class="col-lg-4 col-md-6 mb-4" style="padding:1% 1% 1% 1%;background-color:transparent">
                <div class="card h-100 list-group-item" style="padding: 5% 5% 5% 5%;background-color:transparent; border-radius:0%">
                    <a href="#">
                        <img class="card-img-top" src=@Url.Content(item.productImage) alt="Product Image" height="100%" width="100%" />
                    </a>
                    <div class="card-body" style="background-color:transparent">
                        <h4 class="card-title">
                            <a href="#" Style="color: white">@Html.DisplayFor(modelItem => item.productName)</a>
                        </h4>
                        <h4 Style="color: white">
                            R @Html.DisplayFor(modelItem  => item.ProductPrice)
                        </h4>
                        <p class="card-text"Style="color: white">
                            @Html.DisplayFor(modelItem => item.productDropPercent) % Off
                            <br />
                            @Html.DisplayFor(modelItem => item.productDesc)
                            <br />
                            @Html.DisplayFor(modelItem => item.productDateEndPromo)
                            <br />
                            @Html.DisplayFor(modelItem => item.productCatagories)
                        </p>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted" style="color:white">&#9733; &#9733; &#9733; &#9733; &#9734;</small> 
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.productID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.productID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.productID })*@
                    </div>

                </div>
            </div>

           

                }
            </div>
        </div>
    </div>
</div>
<!-- /.row -->
@*</div>*@
<!-- /.col-lg-9 -->
@*</div>*@
